<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mandoo.DAO.AccountDAO">

    <select id="getAccountById" parameterType="string" resultType="AccountDTO">
        SELECT * FROM account WHERE account_id = #{account_Id}
    </select>

    <insert id="createAccount" parameterType="AccountDTO">
        INSERT INTO account (account_id, account_pw, account_name, account_email)
        VALUES (#{account_Id}, #{account_Pw}, #{account_Name}, #{account_Email})
    </insert>

    <insert id="addAccount" parameterType="AccountDTO">
        INSERT INTO account (account_id, account_pw, account_name, account_email)
        VALUES (#{account_Id}, #{account_Pw}, #{account_Name}, #{account_Email})
    </insert>

    <select id="getAllAccounts" resultType="AccountDTO">
        SELECT * FROM account
    </select>

    <delete id="deleteAccount" parameterType="string">
        DELETE FROM account WHERE account_id = #{account_Id}
    </delete>

    <select id="getTotalRecords" resultType="int">
        SELECT COUNT(*) FROM account
    </select>

</mapper>
